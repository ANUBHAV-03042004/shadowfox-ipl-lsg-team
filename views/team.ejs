<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.png" type="image/png">
    <title>Team - AKS IPL PROJECT LSG</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/home.css">
</head>
<body class="bg-dark">
    <%- include('partials/header') %>

    <div class="position-relative d-flex flex-column justify-content-start align-items-center" style="padding-top: 70px; min-height: 100vh;">
        <div class="w-100 text-white p-3 rounded" style="max-width: 1500px;">
            <%- include('partials/radio_button') %>

            <!-- Players Section -->
            <div id="playersBox" class="toggle-box bg-dark text-white p-3 rounded mt-3">
                <h2 class="text-center my-4">Lucknow Super Giants Players</h2>
                <div id="playersContent">
                    <% let roles = ["Batsman", "Wicket-Keeper", "All-Rounder", "Bowler"]; %>
                    <% roles.forEach(role => { %>
                        <div class="role-section" data-role="<%= role.toLowerCase() %>">
                            <h3 class="text-center mt-4 role-title"><%= role %>s</h3>
                            <div class="row">
                                <% players.filter(player => player.role.includes(role)).forEach(player => { %>
                                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch mb-5 player-col">
                                        <div class="card text-white h-100 p-2 border border-3 border-white player-card"
                                             data-role="<%= player.role.toLowerCase() %>"
                                             style="width: 100%; max-width: 350px; background-color: rgb(237, 173, 55);">
                                            <img src="<%= player.image %>" class="card-img-top mx-auto mt-2" alt="<%= player.name %>"
                                                 style="width: 100%; height: 400px; object-fit: cover; border: 2px solid white">
                                            <div class="card-body d-flex flex-column text-center">
                                                <h6 class="card-title mb-1"><%= player.name %></h6>
                                                <div class="d-flex flex-wrap justify-content-between small">
                                                    <span>Matches: <%= player.matches %></span>  |  
                                                    <span>Runs: <%= player.runs %></span>
                                                </div>
                                                <% if (player.role.includes("Wicket-Keeper")) { %>
                                                    <div class="d-flex flex-wrap justify-content-between small">
                                                        <span>Stumpings: <%= player.stumpings %></span>
                                                    </div>
                                                <% } %>
                                                <br>
                                                <a href="<%= player.profile_link %>" class="btn btn-dark btn-sm mt-auto">View Profile</a>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>

            <!-- Support Staff Section -->
            <div id="staffBox" class="toggle-box bg-dark text-white p-3 rounded mt-3 d-none" style="max-width: 1500px;">
                <h2 class="role-title text-center text-white my-4">Supporting Staff</h2>
                <div class="row">
                    <% staff.forEach(member => { %>
                        <div class="col-12 col-sm-6 col-md-4 mb-4 d-flex justify-content-center">
                            <div class="card text-center p-3 border border-white" style="width: 100%; max-width: 300px;">
                                <img src="<%= member.image %>" class="card-img-top img-fluid rounded mx-auto mb-3"
                                     alt="<%= member.name %>" style="object-fit: cover; height: auto; max-height: 300px;">
                                <div class="card-body">
                                    <h5 class="card-title"><%= member.name %></h5>
                                    <p class="card-text text-white"><%= member.role %></p>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/team.js"></script>
</body>
</html>