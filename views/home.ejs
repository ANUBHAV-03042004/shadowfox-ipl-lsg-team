<script>
    function openModal() {
        var myModal = new bootstrap.Modal(document.getElementById('imageModal'));
        myModal.show();
    }
    async function fetchCricketNews() {
    try {
        const response = await fetch("http://localhost:2500/rss-feed");
        const text = await response.text();
        const parser = new DOMParser();
        const xml = parser.parseFromString(text, "text/xml");
        const items = xml.querySelectorAll("item");

        let newsHtml = "";
        items.forEach((item) => {
            const title = item.querySelector("title").textContent;
            const link = item.querySelector("link").textContent;
            newsHtml += `<span class="news-item">üîπ <a href="${link}" target="_blank">${title}</a></span> `;
        });

        let ticker = document.getElementById("news-ticker");
        ticker.innerHTML = newsHtml.repeat(4); // Repeat 4 times to ensure continuous scroll

        // Adjust speed dynamically for smoother animation
        let contentWidth = ticker.scrollWidth / 4; // Divided by repeat count
        let speed = contentWidth / 40; // Lower divisor = faster speed
        ticker.style.animation = `scrollNews ${speed}s linear infinite`;

    } catch (error) {
        console.error("Error fetching RSS feed:", error);
    }
}

fetchCricketNews();

</script>
