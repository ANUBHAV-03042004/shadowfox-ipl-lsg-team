<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.png" type="image/png">
    <title>Matches - AKS IPL PROJECT</title>
    <link rel="stylesheet" href="css/home.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark">
    
    <div class="position-relative vh-100 d-flex justify-content-center align-items-center">
        <%- include('partials/header') %>
        <div class="position-absolute top-0 start-0 mt-5 ms-3 text-white p-3 rounded w-100" style="max-width: 1500px;">
            <%- include('partials/matches_button') %>
        <h3 class="text-center mt-4 role-title">Matches</h3>
        <!-- Matches Section -->
        <div id="matchesContainer" class="container me-1">
            <div class="row justify-content-center w-100">
                <% match.forEach(matchItem => { %>
                    <div class="col-12 col-md-6 mb-5 match-card"
                         data-team1="<%= matchItem.team1.trim() %>"
                         data-team2="<%= matchItem.team2.trim() %>">
                        <div class="card text-white p-4 border border-white bg-transparent " style="width: 90%;">
                            <div class="card-body text-center">
                                <h6 class="card-title mb-1"><%= matchItem.match_number %></h6>
                                <p class="mb-1"><strong>Status:</strong> <%= matchItem.status %></p>
                                <p class="mb-1"><strong>Date:</strong> <%= matchItem.date %></p>
                                <p class="mb-1"><strong>Time:</strong> <%= matchItem.time_IST %></p>
                                <p class="mb-1"><strong>Location:</strong> <%= matchItem.location %></p>
        
                                <!-- Team Images with "VS" -->
                                <div class="d-flex justify-content-center align-items-center gap-3 mt-3">
                                    <div class="text-center team-container">
                                        <img src="<%= matchItem.team1_img %>" alt="<%= matchItem.team1 %>" class="team-logo">
                                        <p class="mt-2"><strong><%= matchItem.team1 %></strong></p>
                                    </div>
                                    <h4 class="text-center mb-0">V/S</h4>
                                    <div class="text-center team-container">
                                        <img src="<%= matchItem.team2_img %>" alt="<%= matchItem.team2 %>" class="team-logo">
                                        <p class="mt-2"><strong><%= matchItem.team2 %></strong></p>
                                    </div>
                                </div>
                                
        
                                <a href="/matches/<%= matchItem.match_id %>" class="btn btn-light btn-sm mt-3">Match Centre</a>
                            </div>
                        </div>
                    </div>                                        
                <% }); %>
            </div>
        </div>   
        <br><br>    
</div>
        <%- include('partials/footer') %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
   
</body>
</html>
